@model ResultDataForPagination<GetAllCategoryDto>

@{
    ViewData["Title"] = "Index";
}

<h1>@Model.count</h1>

<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container">

    <h1>All Category</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Entities)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td><img src="data:image;base64,@Convert.ToBase64String(item.Image)" width="100px" , height="100px"  alt="Category Image" /></td>
                    <td>
                        <a asp-action="Update" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <a asp-action="Create" asp-controller="Category"  class="btn btn-success">Add Category</a>
    </div>
</body>
</html>


