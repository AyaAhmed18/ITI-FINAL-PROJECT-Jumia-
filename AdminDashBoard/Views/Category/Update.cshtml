@{
    Layout = "_Layout";
}
@model CreateOrUpdateCategoryDto
@{
    ViewData["Title"] = "Update";
    
}

<h1>@AdminDashBoard.Languages.Resource.UpdateCategory</h1>


<html>
<head>



    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
</head>
<body>



    <form method="post" asp-action="Update" asp-controller="Category" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label">@AdminDashBoard.Languages.Resource.Name</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">@AdminDashBoard.Languages.Resource.Name @AdminDashBoard.Languages.Resource.Arabic </label>
            <input asp-for="NameAr" class="form-control">
            <span asp-validation-for="NameAr" style="color:red"></span>
        </div>
        <div class="mb-3" hidden>
            <input asp-for="Id" class="form-control">
        </div>
        <div class="mb-3">
            <label class="form-label">@AdminDashBoard.Languages.Resource.Description</label>
            <input asp-for="Description" class="form-control">
            <span asp-validation-for="Description" style="color:red"></span>
        </div>
        
        <div class="mb-3">
        @if (Model.Image != null && Model.Image.Length > 0)
        {
            <label>Current Image:</label>
           <div> <img  src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)" width="200px" height="200px" alt="Current Image" class="img-fluid"> </div>
        }
        </div>
     
        <div class="mb-3">
            <label class="form-label">@AdminDashBoard.Languages.Resource.Image</label>
            <input asp-for="Image" type="file" class="form-control">
            <span asp-validation-for="Image" style="color:red"></span>
        </div>

       
        
        <br />
        <button type="submit" class="btn btn-primary">@AdminDashBoard.Languages.Resource.Update</button>
    </form>






</body>
</html>