@model CreateOrUpdateCategoryDto
@{
    Layout = "_Layout";
}
 

<h1>@AdminDashBoard.Languages.Resource.AddCategory</h1>


<html>

<head>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
   

</head>
<body>



    <form asp-action="Create" asp-controller="Category" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">@AdminDashBoard.Languages.Resource.Name</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" style="color:red"></span>

        </div>
        <div class="mb-3">
            <label asp-for="NameAr" class="form-label">@AdminDashBoard.Languages.Resource.Name  @AdminDashBoard.Languages.Resource.Arabic</label>
            <input asp-for="NameAr" class="form-control">
            <span asp-validation-for="Name" style="color:red"></span>

        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label">@AdminDashBoard.Languages.Resource.Description</label>
            <input asp-for="Description" class="form-control">
            <span asp-validation-for="Description" style="color:red"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Image" class="form-label">@AdminDashBoard.Languages.Resource.Image</label>
            <input asp-for="Image" type="file" class="form-control">
            <span asp-validation-for="Image" style="color:red"></span>
        </div>





        <button type="submit" class="btn btn-primary">@AdminDashBoard.Languages.Resource.Create</button>
    </form>

 

</body>


</html>

