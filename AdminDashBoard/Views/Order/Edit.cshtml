@model CreateOrUpdateOrderDto
@{
    Layout = "_Layout";
    ViewData["Title"] = "Update Order";

   // SelectList list = new SelectList(ViewBag.OrderStatusOptions,"Status","Status");
}
<style>
   
    span{
        font-weight:bold;
        
    }
    li{
        padding-bottom:5px;
        letter-spacing:2
    }
    
    .card-description a {
        text-decoration:none;
        color:#fff;
        background-color:darksalmon;
        border-radius:5px;
        padding: 10px

    }
select {
    color:#000;
       
}



  
   
</style>


<div class="card container">
        <div class="card-body">
            <h4 class="card-title">@Localizer["OrderInfo"]</h4>
            <br />
        <p class="card-description">
                <a asp-action="Details" asp-controller="Shippment" asp-route-Id=" @Model.CustomerId">@Localizer["ShippingInfo"]</a>
                <a asp-action="Details" asp-controller="Order" asp-route-Id="@Model.Id  ">@Localizer["Products"]</a>
                <a asp-action="Edit" asp-controller="Order" asp-route-Id="@Model.Id  ">@Localizer["ChangeOrder"]</a>
                <a class="back" style="background-color:#fff;color:darksalmon;padding:0;float:@Localizer["floatdir"]" asp-action="Index" asp-controller="Order"> @Localizer["Back"] <i class="mdi mdi-arrow-right"></i></a>

            </p>
            <ul class="">
                <form method="post">
                <li> <span>@Localizer["Order"]   <i class="mdi mdi-help-circle"></i> </span>  @Model.Id</li>
                <li> <span>@Localizer["Customer"]    <i class="mdi mdi-help-circle"></i></span>   @ViewBag.UserName</li>
                <li> <span>@Localizer["OrderStatus"] <i class="mdi mdi-help-circle"></i></span>   <select asp-for="Status" asp-items="ViewBag.OrderStatusOptions" class=" select"></select></li>
 
                <li> <span>@Localizer["TotalPrice"]   <i class="mdi mdi-help-circle"></i></span>  $ @Model.TotalOrderPrice </li>
                <li> <span>@Localizer["CreatedDate"]   <i class="mdi mdi-help-circle"></i></span>   @Model.CreatedDate</li>

                            <br />
                    <div class="col-12">
                <button type="submit" class="btn btn-success text-white w-100">@Localizer["Update"]</button>
               </div>
                </form>
            </ul>
        </div>
        </div>
    

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fixed-top align-items-center" role="alert" id="customAlert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <svg class="bi flex-shrink-0 me0" width="24" height="15" role="img" aria-label="Info:"><use xlink:href="#info-fill" /></svg>
        <div>
            Failed to Update this Order Status
            @* @AdminDashBoard.Languages.Resource.FailedTODelete *@
        </div>
    </div>
}
<script>

    window.setTimeout(function () {
        $(".alert").fadeTo(500, 0).slideUp(500, function () {
            $(this).remove();
        });
    }, 2000);
</script>