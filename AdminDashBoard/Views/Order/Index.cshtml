@using Jumia.DTOS.ViewResultDtos
@using Jumia.Dtos.Order
@model ResultDataForPagination<GetAllOrdersDTO>
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Hoverable Table</h4>
                        <p class="card-description">
                            Add class <code>.table-hover</code>
                        </p>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Customer</th>
                                        <th>Status</th>
                                        <th>PaymentStatus</th>
                                        <th>ShippingStatus</th>
                                        <th>OrderDate</th>
                                        <th>TotalPrice</th>
                                        <th>View</th>

                                    </tr>
                                </thead>
                                <tbody>
                                     @foreach (var item in Model.Entities)
                                 {
              
                                    <tr>
                                            <td>@item.Id</td>
                                        <td>@item.Customer</td>
                                         <td><label class="badge badge-danger">@item.Status</label></td>
                                        <td><label class="badge badge-danger">@item.PaymentStatus</label></td>
                                        <td><label class="badge badge-danger">@item.ShippingStatus</label></td>
                                        <td>@item.OrderDate</td>
                                        <td class="text-danger"> @item.TotalPrice <i class="ti-arrow-down"></i></td>
                                    </tr>
                                    }
                                   
                                   
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
