@model GetAllUsers

@{
    Layout = "_Layout";
}

  



        <div class="container">
    <header>@AdminDashBoard.Languages.Resource.AddUserForm</header>
            <div class="progress--bar">
                <div class="step">
            <p>@AdminDashBoard.Languages.Resource.Name</p>
                    <div class="bullet">
                        <span>1</span>
                    </div>
                    <div class="check fas fa-check"></div>
                </div>
                <div class="step">
            <p>@AdminDashBoard.Languages.Resource.Email</p>
                    <div class="bullet">
                        <span>2</span>
                    </div>
                    <div class="check fas fa-check"></div>
                </div>
                <div class="step">
            <p>@AdminDashBoard.Languages.Resource.Phone</p>
                    <div class="bullet">
                        <span>3</span>
                    </div>
                    <div class="check fas fa-check"></div>
                </div>
                <div class="step">
            <p>@AdminDashBoard.Languages.Resource.Password</p>
                    <div class="bullet">
                        <span>4</span>
                    </div>
                    <div class="check fas fa-check"></div>
                </div>
                <div class="step">
            <p>@AdminDashBoard.Languages.Resource.Role</p>
                    <div class="bullet">
                        <span>5</span>
                    </div>
                    <div class="check fas fa-check"></div>
                </div>
                <div class="step">
            <p>@AdminDashBoard.Languages.Resource.Submit</p>
                    <div class="bullet">
                        <span>6</span>
                    </div>
                    <div class="check fas fa-check"></div>
                </div>
            </div>
            <div class="form-outer">



            <form asp-action="Adduser" method="post">
               
                    <div class="page slide-page">
                <div class="title">1-@AdminDashBoard.Languages.Resource.Name:</div>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                     <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="field">
                    <label class="label" asp-for="UserName">@AdminDashBoard.Languages.Resource.UserName:</label>
                        <input asp-for="UserName" class="form-control" required />
                       
                           
                        </div>
                       
                        <div class="field">
                            <button class="firstNext next">Next</button>
                        </div>
                    </div>

                    <div class="page">
                <div class="title">2-@AdminDashBoard.Languages.Resource.Email:</div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                        <div class="field">
                    <label class="label" asp-for="Email">@AdminDashBoard.Languages.Resource.Email:</label>
                        <input asp-for="Email" class="form-control" required />
                       
                        </div>
                        
                        <div class="field btns">
                    <button class="prev-1 prev">@AdminDashBoard.Languages.Resource.Previous</button>
                    <button class="next-1 next">@AdminDashBoard.Languages.Resource.Next</button>
                        </div>
                    </div>
                    <div class="page">
                <div class="title">3-@AdminDashBoard.Languages.Resource.Phone:</div>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        <div class="field">
                    <label class="label" asp-for="PhoneNumber">@AdminDashBoard.Languages.Resource.Phone Number:</label>
                        <input asp-for="PhoneNumber" class="form-control" required />
                       
                        </div>
                        
                        <div class="field btns">
                    <button class="prev-2 prev">@AdminDashBoard.Languages.Resource.Previous</button>
                    <button class="next-2 next">@AdminDashBoard.Languages.Resource.Next</button>
                        </div>
                    </div>
                    <div class="page">
                <div class="title">4-@AdminDashBoard.Languages.Resource.Password:</div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                        <div class="field">
                    <label class="label" asp-for="Password">@AdminDashBoard.Languages.Resource.Password:</label>
                        <input asp-for="Password" type="password" class="form-control" required />
                      
                        </div>
                        
                        <div class="field btns">
                    <button class="prev-3 prev">@AdminDashBoard.Languages.Resource.Previous</button>
                    <button class="next-3 next">@AdminDashBoard.Languages.Resource.Next</button>
                        </div>
                    </div>

                    <div class="page">
                <div class="title">5-@AdminDashBoard.Languages.Resource.Role:</div>
                    <span asp-validation-for="SelectedRoles" class="text-danger"></span>
                       @*  <div class="field">
                        <label class="label" asp-for="SelectedRoles">Role:</label>
                        <select asp-for="SelectedRoles" asp-items="@(new SelectList(ViewBag.Roles, "Name", "Name"))" class="form-control" multiple required>
                            <option value="">Select Role</option>
                        </select>
                       
                        </div> *@
                        <ul class="ks-cboxtags">
            @foreach (var role in ViewBag.Roles)
            {
                <li><input type="checkbox" name="SelectedRoles" value="@role.Name" id="role_@role.Name">
                    <label for="role_@role.Name">@role.Name</label>
                </li>
               
                
             
                    
              
            }
           
            
        </ul>
                        <div class="field btns">
                    <button class="prev-4 prev">@AdminDashBoard.Languages.Resource.Previous</button>
                    <button class="next-4 next">@AdminDashBoard.Languages.Resource.Next</button>
                        </div>
                    </div>

                    <div class="page">
                <div class="title">6-@AdminDashBoard.Languages.Resource.Submit:</div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="field btns">
                    <button class="prev-5 prev">@AdminDashBoard.Languages.Resource.Previous</button>
                    <button class="submit">@AdminDashBoard.Languages.Resource.Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>


   








