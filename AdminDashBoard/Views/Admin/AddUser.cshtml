@model GetAllUsers

@{
    Layout = "_Layout";
}

  



        <div class="container">
            <header>Add User Form</header>
            <div class="progress--bar">
                <div class="step">
                    <p>Name</p>
                    <div class="bullet">
                        <span>1</span>
                    </div>
                    <div class="check fas fa-check"></div>
                </div>
                <div class="step">
                <p>Email</p>
                    <div class="bullet">
                        <span>2</span>
                    </div>
                    <div class="check fas fa-check"></div>
                </div>
                <div class="step">
                <p>Phone</p>
                    <div class="bullet">
                        <span>3</span>
                    </div>
                    <div class="check fas fa-check"></div>
                </div>
                <div class="step">
                <p>Password</p>
                    <div class="bullet">
                        <span>4</span>
                    </div>
                    <div class="check fas fa-check"></div>
                </div>
                <div class="step">
                <p>Role</p>
                    <div class="bullet">
                        <span>5</span>
                    </div>
                    <div class="check fas fa-check"></div>
                </div>
                <div class="step">
                    <p>Submit</p>
                    <div class="bullet">
                        <span>6</span>
                    </div>
                    <div class="check fas fa-check"></div>
                </div>
            </div>
            <div class="form-outer">



            <form asp-action="Adduser" method="post">
               
                    <div class="page slide-page">
                        <div class="title">1-Name:</div>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                     <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="field">
                        <label class="label" asp-for="UserName">User Name:</label>
                        <input asp-for="UserName" class="form-control" required />
                       
                           
                        </div>
                       
                        <div class="field">
                            <button class="firstNext next">Next</button>
                        </div>
                    </div>

                    <div class="page">
                        <div class="title">2-Email:</div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                        <div class="field">
                        <label class="label" asp-for="Email">Email:</label>
                        <input asp-for="Email" class="form-control" required />
                       
                        </div>
                        
                        <div class="field btns">
                            <button class="prev-1 prev">Previous</button>
                            <button class="next-1 next">Next</button>
                        </div>
                    </div>
                    <div class="page">
                        <div class="title">3-Phone:</div>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        <div class="field">
                        <label class="label" asp-for="PhoneNumber">Phone Number:</label>
                        <input asp-for="PhoneNumber" class="form-control" required />
                       
                        </div>
                        
                        <div class="field btns">
                            <button class="prev-2 prev">Previous</button>
                            <button class="next-2 next">Next</button>
                        </div>
                    </div>
                    <div class="page">
                        <div class="title">4-Password:</div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                        <div class="field">
                        <label class="label" asp-for="Password">Password:</label>
                        <input asp-for="Password" type="password" class="form-control" required />
                      
                        </div>
                        
                        <div class="field btns">
                            <button class="prev-3 prev">Previous</button>
                            <button class="next-3 next">Next</button>
                        </div>
                    </div>

                    <div class="page">
                        <div class="title">5-Role:</div>
                    <span asp-validation-for="SelectedRoles" class="text-danger"></span>
                       @*  <div class="field">
                        <label class="label" asp-for="SelectedRoles">Role:</label>
                        <select asp-for="SelectedRoles" asp-items="@(new SelectList(ViewBag.Roles, "Name", "Name"))" class="form-control" multiple required>
                            <option value="">Select Role</option>
                        </select>
                       
                        </div> *@
                        <ul class="ks-cboxtags">
            @foreach (var role in ViewBag.Roles)
            {
                <li><input type="checkbox" name="SelectedRoles" value="@role.Name" id="role_@role.Name">
                    <label for="role_@role.Name">@role.Name</label>
                </li>
               
                
             
                    
              
            }
           
            
        </ul>
                        <div class="field btns">
                            <button class="prev-4 prev">Previous</button>
                            <button class="next-4 next">Next</button>
                        </div>
                    </div>

                    <div class="page">
                        <div class="title">6-Submit:</div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="field btns">
                            <button class="prev-5 prev">Previous</button>
                            <button class="submit">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>


   








