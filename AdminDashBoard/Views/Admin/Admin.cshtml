<script>
    function confirmDelete() {
        var acc = confirm("Are you sure you want delete this user?");
        if (acc == false) {
            event.preventDefault();
        }
    }

    window.setTimeout(function () {
        $(".alert").fadeTo(500, 0).slideUp(500, function () {
            $(this).remove();
        });
    }, 2000);
</script>