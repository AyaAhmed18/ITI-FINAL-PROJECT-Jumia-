                <a class="back" style="background-color:#fff;color:darksalmon;padding:0;float:@Localizer["floatdir"]" asp-action="Index" asp-controller="Order"> @Localizer["Back"] <i class="mdi mdi-arrow-right"></i></a> *@
            
        </div>

    <div class="row card-group p-2 ">
            @if (Model != null)
            {
                

                <div class="card col-md-5  p-0">
                        <h5 class="card-header ">@Localizer["CustomerInformation"]</h5>
                        <div class="card-body">
                            <p class="card-description">
                                @Localizer["UserData"].. <span class="code">@Localizer["Call"] </span>
                            </p>
                            <p class="">

                                <span>@Localizer["FirstName"] :</span> @Model.FirstNameEn
                            </p>
                            <p class="">
                                <span>@Localizer["LastName"] :</span>  @Model.LastName
                            </p>
                            <p class="">
                                <span>@Localizer["PhoneNumber"] :</span> @Model.PhoneNumber
                            </p>

                        </div>
                    </div>
                    <div class="col-md-1"></div>
                <div class="card col-md-5  p-0">
                    <h5 class="card-header">@Localizer["Address"]</h5>
                    <div class="card-body">
                    <p class="card-description">
                        @Localizer["City"] __ <span class="code"> @Localizer["Region"]</span>
                    </p>

                    <p class="">
                        <span>@Localizer["Address"] :</span>  @Model.Address
                    </p>
                    <p class="">
                        <span>@Localizer["AdressInformation"]  :</span> @Model.AdressInformation
                    </p>
                    <p class="">
                        <span>@Localizer["City"] :</span>    @Model.City
                    </p>
                    <p class="">
                        <span>@Localizer["Region"] :</span>  @Model.Region
                    </p>
                    <p class="">
                        <span> @Localizer["DelivaryCost"]   :</span>$ @Model.Cost
                    </p>
                    </div>
                </div>
               
            }
            else{
        

            <div class="col-md-12 card p-0 ">
                <h5 class="card-header">@Localizer["CustomerInformation"]</h5>
                <div class="card-body">
               
                    <p class="card-description">
                        @Localizer["UserData"].. <span class="code">@Localizer["Call"] </span>
                    </p>
                    <p>@ViewBag.msg</p>
                </div>
            </div>
        
        }
        </div>


