@using Microsoft.AspNetCore.Mvc.Localization

@model GetShippmentDto
@{
    Layout = "_Layout";
}
<style>
  a{
      text-align:center
  }
  

    .code {
        color:red
    }
</style>



<div class="card p-4">
        <div class="card-body">
            <h3> @Localizer["OrderDeliveryDetails"]</h3>
            <br />
            <p class="card-description">
            <a asp-action="Details" asp-controller="Shippment" asp-route-Id="@ViewBag.orderId " class="btn btn-warning">@Localizer["ShippingInfo"]</a>
