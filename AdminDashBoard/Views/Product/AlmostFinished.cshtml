@using Jumia.Dtos.Product

@model List<Jumia.Dtos.Product.GetAllProducts>

<h2>Products Almost Finished</h2>

@if (Model.Count == 0)
{
    <p>No products are almost finished.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Stock Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.RealPrice</td>
                    <td>@product.StockQuantity</td>
                </tr>
            }
        </tbody>
    </table>
}
