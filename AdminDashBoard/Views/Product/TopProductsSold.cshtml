@using Jumia.Dtos.Reports

@model List<TopProductDTO>




    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">@AdminDashBoard.Languages.Resource.Top5Products</h3>

                <div class="table-responsive pt-3">

                    @if (Model.Count == 0)
                    {
                        <p>No products sold yet.</p>
                    }
                    else
                    {
                        <table class="table table-bordered">
                            <thead>
                                <tr>

                                <th scope="col"><p class="fifty-chars">@AdminDashBoard.Languages.Resource.ProductName</p></th>
                                <th scope="col"><p class="fifty-chars">@AdminDashBoard.Languages.Resource.UnitsSold</p></th>
                                    




                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model)
                                {
                                    <tr>
                                        <td class="p-1">@product.ProductName</td>
                                        <td class="p-1">@product.UnitsSold</td>
                                        



                                    </tr>

                                }
                            </tbody>
                        </table>
                    }




                </div>

            </div>
        </div>
    </div>



























