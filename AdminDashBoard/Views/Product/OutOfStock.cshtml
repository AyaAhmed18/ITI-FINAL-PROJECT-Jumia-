

@model List<Jumia.Dtos.Product.GetAllProducts>


<a href="#" id="exportButton" class="btn btn-success text-white me-0"><i class="icon-download"></i> @AdminDashBoard.Languages.Resource.Export</a>




    <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-8">
                    <h4 class="card-title">@AdminDashBoard.Languages.Resource.Outofstock</h4>
                    <p class="card-description">
                        Table: <span style="color:red">@AdminDashBoard.Languages.Resource.Outofstock</span>
                    </p>

                    </div>
                    </div>
           
            <div class="table-responsive pt-3">
            
                    @if (Model.Count == 0)
                    {
                        <p>No products are out of stock.</p>
                    }
                    else
                    {
                    <table class="table table-hover  table-bordered">
                            <thead>
                                <tr>

                                    <th scope="col"><p class="fifty-chars">@AdminDashBoard.Languages.Resource.Name</p></th>
                                <th scope="col"><p class="fifty-chars">@AdminDashBoard.Languages.Resource.Price</p></th>
                                <th scope="col"><p class="fifty-chars">@AdminDashBoard.Languages.Resource.StockQuantity</p></th>




                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model)
                                {
                                    <tr>
                                        <td class="p-1">@product.Name</td>
                                        <td class="p-1">@product.RealPrice</td>
                                        <td class="p-1">@product.StockQuantity</td>



                                    </tr>

                                }
                            </tbody>
                        </table>
                    }

                


            </div>
       
        </div>
        </div>
        </div>





































